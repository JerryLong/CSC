<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp" >

        <ImageView
            android:id="@+id/view_cmark_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/download_failed" />

        <TextView
            android:id="@+id/view_cmark_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#E0000000"
            android:alpha="0.6"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="ssss"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/view_cmark_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="ssss"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/view_cmark_price"
                style="@style/cmark_text_style"
                android:textColor="@color/gold" />

            <TextView
                style="@style/cmark_text_style"
                android:text="@string/cmark_market_price" />
        </LinearLayout>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/view_cmark_gold"
                style="@style/cmark_text_style"
                android:textColor="@color/gold" />

            <TextView
                style="@style/cmark_text_style"
                android:text="@string/cmark_gold_price" />
        </LinearLayout>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/view_cmark_quantity"
                style="@style/cmark_text_style"
                android:textColor="@color/gold" />

            <TextView
                style="@style/cmark_text_style"
                android:text="@string/cmark_surplus_quantity" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/view_cmark_exchange"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/cmark_exchange_btn"
        android:text="@string/cmark_exchange"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>