<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.cdrongyao.caisichuan">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.guess.myview.CircleImageView 
            android:id="@+id/item_square_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            app:border_width="0.5dp"
            app:border_color="#fff"
            android:src="@drawable/icon120"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/item_square_user_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="center"
                android:text="官方"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView 
                    android:id="@+id/item_square_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="10-22 09:43"/>
                <TextView 
                    android:id="@+id/item_square_hot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="热度  2"/>
                <TextView 
                    android:id="@+id/item_square_gold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="8dp"
                    android:gravity="center_vertical|right"
                    android:text="金币  53"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_picture2x"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/item_square_image"
            android:contentDescription="@string/action_settings"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="0dp"/>
        <TextView 
            android:id="@+id/item_square_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="这是哪里?"
            android:layout_gravity="bottom"/>
        <TextView 
            android:id="@+id/item_square_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:text="已赞 8"
            android:drawableLeft="@drawable/ic_square_like2x"
            android:drawablePadding="-10dp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:background="@drawable/ic_square_bg_like2x"
            android:textSize="14sp"/>
    </FrameLayout>
</LinearLayout>
