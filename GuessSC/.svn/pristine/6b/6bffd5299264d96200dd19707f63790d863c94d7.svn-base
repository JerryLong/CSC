<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/beige">
    <RelativeLayout 
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include 
        	layout="@layout/layout_navigation_bar"/>
        <ImageView 
            android:id="@+id/official_code_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:padding="8dp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:src="@drawable/daren_share"/>
    </RelativeLayout>
	
    <ImageView
        android:id="@+id/official_code_detail_picture"
        android:layout_below="@+id/top"
        android:scaleType="fitXY"
        android:src="@drawable/download_failed"
        android:contentDescription="@string/action_settings"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    
    <TextView 
        android:id="@+id/official_code_detail_title"
        android:layout_below="@+id/official_code_detail_picture"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"/>
    <Button 
        android:id="@+id/official_code_detail_scan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:text="扫描二维码"
        android:textColor="#fff"
        android:textSize="18sp"
        android:background="@drawable/cmark_exchange_btn"/>
</RelativeLayout>
