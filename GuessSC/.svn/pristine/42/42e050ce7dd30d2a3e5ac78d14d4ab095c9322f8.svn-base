<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal" >
    <FrameLayout 
        android:layout_width="90dp"
        android:layout_margin="10dp"
        android:layout_height="90dp">
        <ImageView 
	        android:id="@+id/item_question_picture"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/default_picture2x"
	        android:scaleType="fitXY"
	        android:contentDescription="@string/action_settings"/>
        <ImageView 
            android:alpha="0.8"
	        android:id="@+id/item_question_activity"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_gravity="top"
	        android:src="@drawable/ic_more_end2x"
	        android:contentDescription="@string/action_settings"/>
    </FrameLayout>
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_gravity="center_vertical"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/item_question_question"
	            android:layout_width="wrap_content"
	            android:layout_height="0dp"
	            android:gravity="center_vertical"
	            android:singleLine="true"
	            android:textSize="16sp"
	            android:textColor="#000000"
	            android:layout_weight="3"
	            android:ellipsize="end"/>
	        <TextView 
	            android:id="@+id/item_question_answer"
	            android:layout_width="wrap_content"
	            android:layout_height="0dp"
	            android:singleLine="true"
	            android:gravity="center_vertical"
	            android:textSize="14sp"
	            android:layout_weight="2"
	            android:ellipsize="end"
	            android:drawablePadding="10dp"
	            android:drawableLeft="@drawable/ic_nore_join_answer2x"/>
	        <TextView 
	            android:id="@+id/item_question_time"
	            android:layout_height="0dp"
	            android:layout_width="wrap_content"
	            android:singleLine="true"
	            android:gravity="center_vertical"
	            android:textSize="14sp"
	            android:layout_weight="2"
	            android:ellipsize="end"
	            android:layout_marginLeft="2dp"
	            android:drawableLeft="@drawable/ic_more_join_time2x"
	            android:drawablePadding="10dp"/>
	    </LinearLayout>
	    <ImageView
	        android:id="@+id/item_question_audit"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_gravity="right|bottom"
	        android:contentDescription="@string/action_settings"
	        android:src="@drawable/upload_question_audit_status2x"
	        android:scaleType="fitXY"
	        android:visibility="gone"
	        android:layout_margin="5dp"/>
    </FrameLayout>

</LinearLayout>
